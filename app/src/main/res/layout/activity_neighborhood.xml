<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/square_background_border_orange">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="우주맛 동네인증"
        android:textColor="#ff7f00"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_backgroud_border_orange"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtAcAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/acDong"
            android:text="활동 범위"
            android:textColor="#ff7f00"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/acDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_backgroud_border_orange"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtLiAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생활 범위"
            android:textColor="#ff7f00"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/liDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/btnNeiCom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="동네인증하기"
        android:textStyle="bold" />


</RelativeLayout>